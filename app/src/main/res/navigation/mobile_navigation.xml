<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.hiltexample.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_main_to_list"
            app:destination="@id/carsListFragment" />
        <action
            android:id="@+id/action_main_to_add"
            app:destination="@id/addCarFragment" />
    </fragment>
    <fragment
        android:id="@+id/carsListFragment"
        android:name="com.example.hiltexample.ui.fragments.CarsListFragment"
        android:label="fragment_cars_list"
        tools:layout="@layout/fragment_cars_list" />
    <fragment
        android:id="@+id/addCarFragment"
        android:name="com.example.hiltexample.ui.fragments.AddCarFragment"
        android:label="fragment_add_car"
        tools:layout="@layout/fragment_add_car" >
        <action
            android:id="@+id/action_add_to_list"
            app:destination="@id/carsListFragment" />
    </fragment>
</navigation>